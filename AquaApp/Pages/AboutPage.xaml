<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AquaApp.Pages.AboutPage"
             Title="About">
    <VerticalStackLayout>
        <Image 
       Source="wave.png"
       Aspect="AspectFit"
       HeightRequest="150"
       WidthRequest="150"/>

        <Label 
       Text="About this app"
       FontAttributes="Bold"
       FontSize="Medium"
       HorizontalOptions="Center"/>

        <Label x:Name="AboutLabel"
               Padding="20"/>
    </VerticalStackLayout>
</ContentPage>